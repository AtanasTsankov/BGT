<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tsankov.atanas.boardgamestimer.StartScreent">

    <Button
        android:id="@+id/newTmplBtn"
        android:layout_width="368dp"
        android:layout_height="54dp"
        android:background="@android:drawable/alert_dark_frame"
        android:text="New Template"
        android:textColor="@android:color/background_light"
        tools:text="New Template"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintRight_toRightOf="@+id/loadTmplBtn"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="49dp"
        app:layout_constraintLeft_toLeftOf="@+id/loadTmplBtn"
        app:layout_constraintBottom_toBottomOf="@+id/loadTmplBtn"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/loadTmplBtn"
        android:layout_width="369dp"
        android:layout_height="49dp"
        android:background="@android:drawable/alert_dark_frame"
        android:text="Load Template"
        android:textColor="@android:color/background_light"
        tools:text="Load Template"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.424"
        app:layout_constraintHorizontal_bias="0.533" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="365dp"
        android:layout_height="50dp"
        android:text="Board Games Timer"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="16dp" />

</android.support.constraint.ConstraintLayout>
