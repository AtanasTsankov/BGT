<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tsankov.atanas.boardgamestimer.StartScreent">

    <TextView
        android:id="@+id/appName"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:fontFamily="sans-serif-condensed"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="24sp"
        tools:text="Board Games Timer"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="92dp"
        android:layout_marginEnd="92dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="126dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="92dp"
        android:layout_marginRight="92dp"
        app:layout_constraintHorizontal_bias="1.0" />

    <Button
        android:id="@+id/newTmplBtn"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:background="@android:drawable/alert_dark_frame"
        android:text="Button"
        android:textColor="@android:color/background_light"
        tools:text="New Template"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintRight_toRightOf="@+id/loadTmplBtn"
        android:layout_marginTop="53dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="50dp"
        app:layout_constraintLeft_toLeftOf="@+id/loadTmplBtn"
        app:layout_constraintBottom_toBottomOf="@+id/loadTmplBtn"
        app:layout_constraintTop_toTopOf="@+id/appName"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/loadTmplBtn"
        android:layout_width="176dp"
        android:layout_height="54dp"
        android:background="@android:drawable/alert_dark_frame"
        android:text="Button"
        android:textColor="@android:color/background_light"
        tools:text="Load Template"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.258" />
</android.support.constraint.ConstraintLayout>
